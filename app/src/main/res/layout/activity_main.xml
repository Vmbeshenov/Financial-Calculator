<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_main_menu"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/titleMain"
        app:layout_constraintStart_toStartOf="@+id/titleMain"
        app:layout_constraintTop_toBottomOf="@+id/titleMain">

        <Button
            android:id="@+id/buttonStartDeposit"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_marginBottom="10dp"
            android:onClick="onClickStartDeposit"
            android:text="@string/button_deposit" />

        <Button
            android:id="@+id/buttonStartCredit"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:onClick="onClickStartCredit"
            android:text="@string/button_credit" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>